<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{dd.MM.yy HH:mm:ss} %-5level %logger{36} %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="ch.qos.logback" level="WARN"/>
  <logger name="org.reflections.Reflections" level="INFO"/>
  <logger name="org.deeplearning4j.ui" level="WARN"/>
  <logger name="com.optimaize.langdetect" level="WARN"/>
  <logger name="org.reflections" level="ERROR"/>
  <logger name="de.datexis" level="INFO"/>
  <logger name="de.datexis.sector" level="DEBUG"/>
  <logger name="de.datexis.heatmap" level="DEBUG"/>
  <logger name="de.datexis.el" level="DEBUG"/>
  <logger name="de.datexis.ned" level="INFO"/>
  <logger name="de.datexis.service" level="DEBUG"/>
  <logger name="org.springframework" level="INFO"/>
  <logger name="org.jboss.logging" level="INFO"/>
  <logger name="org.springframework" level="INFO"/>
  <logger name="org.reflections.Reflections" level="INFO"/>
  <logger name="org.eclipse.jetty" level="INFO"/>
  
</configuration>